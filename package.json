{
  "name": "next-sample",
  "version": "0.1.0",
  "main": "src/js/index.js",
  "description": "sample app using the next version of Grommet",
  "homepage": "http://grommet.io",
  "bugs": "https://github.com/grommet/next-sample/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/grommet-docs/grommet.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "test": "grommet check",
    "dev": "cross-env NODE_ENV=development grommet pack",
    "dist": "cross-env NODE_ENV=production grommet pack"
  },
  "dependencies": {
    "grommet": "https://github.com/grommet/grommet/tarball/NEXT-stable",
    "react": "^15.4.0",
    "react-dom": "^15.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-grommet": "^0.1.1",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.4",
    "deep-assign": "^2.0.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-parallel": "^0.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "grommet-cli": "^4.0.0",
    "pre-commit": "^1.2.2",
    "react-dev-utils": "^0.4.2",
    "react-test-renderer": "^15.4.1",
    "webpack": "^2.2.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/templates/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|templates|node_modules)[/\\\\]"
    ]
  },
  "pre-commit": [
    "test"
  ]
}
